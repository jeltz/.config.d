[user]
	name = Johan Sageryd
	email = johan.sageryd@redbet.com
[core]
	excludesfile = ~/.config.d/git/.gitexclude
	editor = vim
[advice]
	detachedHead = false
[alias]
	a = add
	ci = commit
	co = checkout
	cp = cherry-pick
	kill = "!git_kill"
	new = "!git_new"
	ps = push
	rb = rebase
	ri = rebase --interactive
	rs = reset
	st = status
[mergetool]
	keepBackup = false
	prompt = false
[color]
	ui = auto
[push]
	default = simple
[rebase]
	autosquash = true
[difftool]
	prompt = false
[rerere]
	enabled = true
[instaweb]
	httpd = webrick
[fetch]
	prune = true
[status]
	short = true
	branch = true
[merge]
	log = 2000
